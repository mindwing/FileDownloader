<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kr.mindwing.filedownloader.MainActivity">

    <Button
        android:id="@+id/no0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/progress0"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="0"
        android:text="[1] The Verve - Bitter Sweet Symphony"
        android:textAllCaps="false" />

    <Button
        android:id="@id/progress0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/no1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no0"
        android:layout_toLeftOf="@+id/progress1"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="1"
        android:text="[2] Mika - Grace Kelly"
        android:textAllCaps="false" />

    <Button
        android:id="@id/progress1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/progress0"
        android:singleLine="true" />

    <Button
        android:id="@+id/no2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/no1"
        android:layout_toLeftOf="@+id/progress2"
        android:gravity="left|center_vertical"
        android:onClick="downloadMP3"
        android:singleLine="true"
        android:tag="2"
        android:text="[3] 존재하지 않는 URL"
        android:textAllCaps="false" />

    <Button
        android:id="@id/progress2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/progress1"
        android:singleLine="true" />

</RelativeLayout>
